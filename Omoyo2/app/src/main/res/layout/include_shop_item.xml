<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view_for_shop_item"
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardElevation="10dp"
        android:layout_marginBottom="3dp"
        card_view:cardBackgroundColor="@color/appcolor"
        card_view:cardCornerRadius="4dp">
        <RelativeLayout
            android:id="@+id/relative_layout_for_shop_item_show"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="@color/white"
                android:layout_alignParentTop="true"
                android:gravity="center_horizontal"
                android:id="@+id/text_view_for_item_name_in_shop_show"
                />
            <TextView
                android:id="@+id/text_view_for_price_of_item_in_shop_show"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="@color/white"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                />
            <TextView
                android:id="@+id/text_view_for_offer_of_item_in_shop_show"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="@color/white"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                />
            <TextView
                android:id="@+id/text_view_for_description_of_item_in_shop_show"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="@color/white"
                android:layout_alignParentBottom="true"
                android:gravity="center_horizontal"
                />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>