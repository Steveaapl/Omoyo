<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.muditi.deligoo.Offer"
    tools:showIn="@layout/activity_offer">
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view_for_offer"
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        card_view:cardElevation="0dp"
        card_view:cardBackgroundColor="@color/appcolor"
        android:layout_alignParentTop="true"
        card_view:cardCornerRadius="0dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/image_view_for_filter_wide_list"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@mipmap/ic_view_agenda_black_48dp"
                android:layout_gravity="center_horizontal|center_vertical"
                />
            <ImageView
                android:id="@+id/image_view_for_filter_narrow_list"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@mipmap/ic_reorder_black_48dp"
                android:layout_gravity="center_horizontal|center_vertical"
                />
            <ImageView
                android:id="@+id/image_view_for_filter_grid_list"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@mipmap/ic_view_module_black_48dp"
                android:layout_gravity="center_horizontal|center_vertical"
                />
        </LinearLayout>
        </android.support.v7.widget.CardView>
            <GridView
                android:id="@+id/grid_for_offer_wide"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:numColumns="1"
                android:verticalSpacing="10dp"
                android:horizontalSpacing="10dp"
                android:stretchMode="columnWidth"
                android:gravity="center"
                android:layout_below="@+id/card_view_for_offer"
                />

            <GridView
                android:id="@+id/grid_for_offer_narrow"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:numColumns="1"
                android:verticalSpacing="10dp"
                android:horizontalSpacing="10dp"
                android:stretchMode="columnWidth"
                android:gravity="center"
                android:visibility="gone"
                android:layout_below="@+id/card_view_for_offer"
                />

            <GridView
                android:id="@+id/grid_for_offer_grid"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:columnWidth="100dp"
                android:numColumns="auto_fit"
                android:verticalSpacing="10dp"
                android:horizontalSpacing="10dp"
                android:stretchMode="columnWidth"
                android:gravity="center"
                android:visibility="gone"
                android:layout_below="@+id/card_view_for_offer"
                />

    <GridView
        android:id="@+id/grid_for_category_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:numColumns="1"
        android:verticalSpacing="10dp"
        android:horizontalSpacing="10dp"
        android:stretchMode="columnWidth"
        android:gravity="center"
        android:visibility="gone"
        android:layout_below="@+id/card_view_for_offer"
        android:background="@color/appcolor"
        android:backgroundTint="@color/hummingbird"
        />

</RelativeLayout>
