<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        card_view:cardElevation="10dp"
        android:layout_marginBottom="3dp"
        card_view:cardBackgroundColor="@color/appcolor"
        card_view:cardCornerRadius="4dp">
        <com.pkmmte.view.CircularImageView
            android:id="@+id/circular_image_view_for_call_to_shop"
            android:layout_width="70dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_height="70dp"
            android:src="@mipmap/ic_phone_white_48dp"
            app:border="true"
            app:border_color="@color/aliceblue"
            app:shadow="true"
            android:layout_marginLeft="20dp"
            android:gravity="center_vertical|left"
            />
        <com.pkmmte.view.CircularImageView
            android:id="@+id/circular_image_view_for_sms_to_shop"
            android:layout_width="70dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_height="70dp"
            android:src="@mipmap/ic_message_white_48dp"
            app:border="true"
            app:border_color="@color/aliceblue"
            app:shadow="true"
            android:layout_marginRight="20dp"
            android:gravity="right|center_vertical"
            />
        </android.support.v7.widget.CardView>
</LinearLayout>